{{> header}}


<div class="articles">
<!--    button to close-->
    {{#banner.title}}
        <section>
            <header class="banner">
                <h2 class="banner-title">{{banner.title}}</h2>
            </header>
            <div class="banner-content">
                {{banner.content}}
            </div>
        </section>
    {{/banner.title}}

    <button id="newpost_button" onclick="newpost_button()">New post</button>
    <div id = "newpost_form" hidden>
        <form>
            <input id = "post_title" type="text" name="title" placeholder="Enter post title" required minlength="4" maxlength="30"/>
            <br>
            <input id = "post_text" type="text" name="content" placeholder="Write your post" required/>
            <br>
            <input id = "post_author" type="text" name="author" placeholder="Enter your name" maxlength="50"/>
            <br>
            <button type="submit" onclick="submit_post()">Post</button>
        </form>
    </div>

    {{#articles}}
        <section>
            <header class="article-header">
                <h3 class="article-title">
                    <a href="/article/{{id}}">{{title}}</a>
                </h3>
                <div class="article-meta">
                    By <strong>{{author}}</strong>, on <strong>{{date}}</strong>
                </div>
            </header>
            <div class="article-description">
                {{content}}
            </div>
        </section>
    {{/articles}}

</div>

{{> footer}}